<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grath"
    app:startDestination="@id/authorizationFragment">
    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.osvin.foodapp.presentation.fragment.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" >
        <action
            android:id="@+id/action_authorization_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authorization_to_register"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.osvin.foodapp.presentation.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_resetPassword"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.osvin.foodapp.presentation.fragment.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <action
            android:id="@+id/action_resetPassword_to_emailSent"
            app:destination="@id/emailSentFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.osvin.foodapp.presentation.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_register_to_emailSent"
            app:destination="@id/emailSentFragment" >

        </action>
    </fragment>
    <fragment
        android:id="@+id/emailSentFragment"
        android:name="com.osvin.foodapp.presentation.fragment.EmailSentFragment"
        android:label="fragment_email_sent"
        tools:layout="@layout/fragment_email_sent" >
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_emailSent_to_login"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>